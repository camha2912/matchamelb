            border-radius: 1rem;
            background-color: #fffef7;
            border: 2px solid #fce873;
          "
        >
          <div class="text-center">
            <img
              src="/images/subscribed-1.png"
              alt="Subscribed"
              style="max-width: 140px"
              class="mb-3"
            />
            <h6 class="fw-semibold mb-2">
              Thanks for joining the MatchaMelb community! 🧋
            </h6>
            <p class="mb-0">Your inbox just got greener.</p>
            <button
              type="button"
              class="btn btn-sm mt-3"
              data-bs-dismiss="modal"
              style="background-color: #ccdb8a"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- =================== JAVASCRIPT =================== -->
    <!-- Bootstrap Validation Script for Form Submission -->
    <script>
      (() => {
        "use strict";
        const forms = document.querySelectorAll(".needs-validation");
        Array.from(forms).forEach((form) => {
          form.addEventListener(
            "submit",
            (event) => {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>

    <script src="scripts.js"></script>
  </body>
</html>
